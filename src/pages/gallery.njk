---
eleventyComputed:
  title: 'Сортавала - галерея'
layout: page.njk
permalink: 'gallery.html'
---

{% include 'header.njk' %}

<style>
    {% include "styles/other_pages_css/gallery.css" %}
    {% include "styles/mobile/other_pages_css/gallery.css" %}
</style>

<section class="gallery-page-content">
    <div class="gallery-text">{{staticTexts.galleryText}}</div>
    
    <div class="gallery-switch-m">
        <div class="switch-section-m">
            <span class="oth_img">{{staticTexts.imagineModSwitch}}</span>
            <label class="switch-checkbox">
                <input type="checkbox" id="switch-3" class="checkbox"/>
                <label for="switch-3" class="toggle">
            </label>
            </div>
    </div>

    <section class="recently-added">
        <div class="r-a-text">{{staticTexts.recentlyAdded}}</div>

        <div class="slider-items">
            {% set container  = "recentlyAdded" %}
            {% include 'slider-w-o-swiper.njk' %}
        </div>

    </section>
    <section class="gallery-followed">
        <div class="g-f-text">{{staticTexts.galleryFollowed}}</div>

        <div class="slider-items">
            {% set container  = "galleryFollowed" %}
            {% include 'slider-w-o-swiper.njk' %}
        </div>

    </section>
    <section class="gallery-content">
        <div class="g-c-text">{{staticTexts.galleryContent}}</div>
        <div class="grid-list">
            {% set container  = "base" %}
            {% include 'grid-list.njk' %}
        </div>

    </section>
</section>


<footer class="footer">
    <p class="footer-description left-text">{{staticTexts.footerDescription}}</p>
    <p class="desc_text_m">{{staticTexts.mainWebsiteDescription}}</p>
    <p class="copyright center-text">{{staticTexts.copyright}}</p>
</footer>